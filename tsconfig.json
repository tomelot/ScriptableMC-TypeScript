{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        //"lib": ["ES5", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ScriptHost"],
        "types": ["node"],

        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
}